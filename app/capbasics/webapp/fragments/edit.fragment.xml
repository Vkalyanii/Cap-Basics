<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="editBookDialog" title="Edit Book">
    <content>
      <VBox id="_IDGenVBox1">
        <Label id="_IDGenLabel" text="ID" />
        <Input id="inputID" value="{BooksModel>/ID}" placeholder="Enter Book ID" editable="false" /> <!-- ID is not editable -->

        <Label id="_IDGenLabel1" text="Title" />
        <Input id="inputTitle" value="{BooksModel>/title}" placeholder="Enter Book Title" />

        <Label id="_IDGenLabel2" text="Stock" />
        <Input id="inputStock" placeholder="Enter Stock Quantity" value="{BooksModel>/stock}" type="Number" />
      </VBox>
    </content>

    <beginButton>
      <Button id="_IDGenButton3" text="Save" press="onSaveEditPress" />
    </beginButton>

    <endButton>
      <Button id="_IDGenButton4" text="Cancel" press="onCancelEditPress" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>
